<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SendReview">


    <RelativeLayout
        android:id="@+id/relHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@null"
            android:padding="14dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txtTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review and Send"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imgBtnBack"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relUserAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relHeader">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardAmount"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="4dp"
            android:elevation="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="12dp"
            app:cardBackgroundColor="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relUserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleUserProfile"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ion_wizard"/>
                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/circleUserProfile"
                        android:text="John Doe"
                        android:layout_marginEnd="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginStart="14dp"/>
                    <TextView
                        android:id="@+id/txtUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jhonde@nexgen.com"
                        android:layout_marginEnd="16dp"
                        android:maxLines="1"
                        android:layout_below="@id/txtUserName"
                        android:layout_toRightOf="@id/circleUserProfile"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/circleUserProfile"
                        android:layout_toRightOf="@id/circleUserProfile"
                        android:layout_marginStart="14dp"
                        android:background="@color/colorGrayDark"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relUserDetail"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:weightSum="2">
                    <ImageButton
                        android:id="@+id/imgBtnAdd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:src="@drawable/ic_add_primary"
                        android:padding="14dp"
                        android:background="@null"/>
                    <EditText
                        android:id="@+id/textNote"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:hint="Add a note"
                        android:background="@null"
                        android:padding="14dp"/>
                    <ImageButton
                        android:id="@+id/imgBtnNext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:src="@drawable/ic_right_primary"
                        android:padding="14dp"
                        android:background="@null"/>
                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="gone"
                    android:background="@color/colorPrimaryDark"
                    android:layout_below="@id/linNote"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/colorPrimaryDark">
            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20.00 USD"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="18dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relCardTransactionDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relUserAmount">
        <RelativeLayout
            android:id="@+id/relCardDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/visa"/>
            <TextView
                android:id="@+id/txtCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgCard"
                android:text="Visa"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="14dp"/>
            <TextView
                android:id="@+id/txtCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit ************1234"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:layout_below="@id/txtCardName"
                android:layout_toRightOf="@id/imgCard"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/imgCard"
                android:layout_toRightOf="@id/imgCard"
                android:layout_marginStart="14dp"
                android:background="@color/colorGrayDark"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relCardDetail">

            <RelativeLayout
                android:id="@+id/relAmount"
                android:layout_width="match_parent"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount in USD"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/txtTransactionAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.00 USD"
                    android:padding="12dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtAT"
                    android:layout_toRightOf="@id/txtAT"
                    android:layout_marginStart="14dp"
                    android:background="@color/colorGrayDark"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relTransactionFee"
                android:layout_width="match_parent"
                android:layout_below="@id/relAmount"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtTF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction fees"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/txtFeeAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.00 USD"
                    android:padding="12dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtTF"
                    android:layout_toRightOf="@id/txtTF"
                    android:layout_marginStart="14dp"
                    android:background="@color/colorGrayDark"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relTransactionReceived"
                android:layout_width="match_parent"
                android:layout_below="@id/relTransactionFee"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtTR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Received"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/txtTransactionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Seconds"
                    android:padding="12dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtTR"
                    android:layout_toRightOf="@id/txtTR"
                    android:layout_marginStart="14dp"
                    android:background="@color/colorGrayDark"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSendNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        app:cornerRadius="8dp"
        style="@style/MaterialButtonStyle"
        android:text="Send Now"
        app:icon="@drawable/ic_right"
        app:iconGravity="textEnd"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

</RelativeLayout>